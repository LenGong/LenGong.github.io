{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "noImplicitAny": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "./aot",
        "rootDir": "./src",
        "typeRoots": [
          "./node_modules/@types"
        ],
        "types": [
            "core-js",
            "node",
        ]
    },

    "files": [
        "src/main.ts",
        "src/polyfills.ts",
        "src/vendor.ts",
        "src/app/picture/picture.module.ts"
      ],

    "angularCompilerOptions": {
        "genDir": "./aot/ng",
        "skipMetadataEmit": true
    }
}
